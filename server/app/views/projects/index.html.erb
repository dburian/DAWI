<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Long desc</th>
      <th>Short desc</th>
      <th>Year</th>
      <th>Function</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.long_desc %></td>
        <td><%= project.short_desc %></td>
        <td><%= project.year %></td>
        <td><%= ProjectFunction.find(project.function_id).name %></td>
        <td><%= ProjectStatus.find(project.status_id).name %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

