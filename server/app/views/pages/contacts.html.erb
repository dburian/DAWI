<% content_for :stylesheets do %>
    <%= stylesheet_pack_tag "contacts_stylesheets", media: "all" %>
<% end %>

<% content_for :javascripts do %>
    <%= javascript_pack_tag 'contacts', 'data-turbolinks-track': 'reload' %>
<% end %>
<main class="l-contacts-grid-container">

    <div id="contact-branches">
        <h1 class="contacts-article-header">Branches</h1>
        <ol id="branches_list">
        </ol>
    </div>
    <div id="contact-reach-us">
        <h1 class="contacts-article-header">Reach Us</h1>

        <ol>
            <li class="contacts-article-list-item">
                <p><a id="phone_label"></a></p>
            </li>
            <li class="contacts-article-list-item">
                <p><a id="info_mail_label"></a></p>
                <p><a id="business_mail_label"></a></p>
            </li>
            <li class="contacts-article-list-item">
                <p id="insta_label"></p>
            </li>
        </ol>
    </div>
    <div id="contact-billing-info">
        <h1 class="contacts-article-header">Billing info</h1>

        <ol>
            <li class="contacts-article-list-item">
                <p>dič:&nbsp;123456789</p>
                <p>ič:&nbsp;&nbsp;&nbsp;123456789</p>
            </li>
        </ol>
    </div>

    <iframe id="map" src="https://www.google.com/maps/d/embed?mid=1t9l0eKbjK-zqoXbCLD1VOYmHt682xpW0"></iframe>
</main>

<form id="contact-form">
    <table>
        <tr>
            <th colspan="3">
                <h3>Contact form</h3>
            </th>
        </tr>
        <tr>
            <td><input id="form-first-name" type="text" placeholder="*First name"></td>
            <td><input id="form-last-name" type="text" placeholder="*Last name"></td>
            <td class="error-message" colspan="1"></td>
        </tr>
        <tr>
            <td colspan="2"><input id="form-email" type="text" placeholder="*Email"></td>
            <td class="error-message" colspan="1"></td>
        </tr>
        <tr>
            <td colspan="2"><input id="form-email-again" type="text" placeholder="*Repeat your email">
            </td>
            <td class="error-message" colspan="1"></td>
        </tr>
        <tr>
            <td colspan="2"><input id="form-phone" class="phone-input" type="tel" placeholder="Phone number">
            </td>
            <td class="error-message" colspan="1"></td>
        </tr>
        <tr>
            <td colspan="2"><input type="text" placeholder="Subject" maxlength="60"></td>
        </tr>
        <tr>
            <td colspan="2"><textarea id="form-textarea" placeholder="Write a comment..."></textarea></td>
            <td class="error-message" colspan="1"></td>
        </tr>
        <tr>
            <td><input type="submit" value="Send"></td>
        </tr>
    </table>
</form>

<footer id="footer">
    <div id="instagram">
        <a href="https://www.instagram.com"><h5>Instagram</h5></a>
    </div>
    <div id="copyright">
        <h5>© 2019 Fact s.r.o.</h5>
    </div>
    <span class="word-divider"></span>
</footer>
